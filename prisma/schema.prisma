generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  RECEPTIONIST
  SALESPERSON
  SALESMANAGER
  FINANCE_MANAGER
  FINANCE_ASSISTANT
  FINANCE_DIRECTOR
  GENERAL_MANAGER
  ACCOUNTANT
  MAKE_READY
  STATUS_LOG
  EXECUTIVE
}

model User{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hashPass String

  firstName  String?
  lastName String?

  role      Role     

 

 
}

